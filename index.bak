  <!-- ASA auto-discovery slider -->
  <script>
  (function () {
    const el = document.getElementById("recent-showcase");
    if (!el) return;

    const folder   = "images/artists/asa";
    const prefix   = "asa-";
    const zeroPad  = 2;
    const exts     = ["jpg","jpeg","webp","png"];
    const startAt  = 1;
    const maxTry   = 200;
    const gapLimit = 5;
    const autoMs   = 3500;

    function resolveUrl(i) {
      return new Promise((resolve) => {
        let k = 0;
        const n = String(i).padStart(zeroPad, "0");
        function tryNext() {
          if (k >= exts.length) return resolve(null);
          const url = `${folder}/${prefix}${n}.${exts[k]}`;
          const img = new Image();
          img.decoding = "async"; img.loading = "lazy";
          img.onload = () => resolve(url);
          img.onerror = () => { k++; tryNext(); };
          img.src = url + `?v=${Date.now()}`;
        }
        tryNext();
      });
    }

    async function discover() {
      const urls = [];
      let misses = 0;
      for (let i = startAt; i < startAt + maxTry; i++) {
        const url = await resolveUrl(i);
        if (url) { urls.push(url); misses = 0; }
        else { misses++; if (misses >= gapLimit) break; }
      }
      return urls;
    }

    function buildSlider(urls) {
      if (!urls.length) {
        el.innerHTML = `<p class="text-zinc-400">No images found in <code>${folder}/</code>.</p>`;
        return;
      }

      el.innerHTML = `
        <div class="relative group select-none">
          <div class="overflow-hidden rounded-xl border border-white/10">
            <div class="flex transition-transform duration-500 ease-out will-change-transform" id="asa-track" style="transform:translateX(0)">
              ${urls.map(u => `
                <div class="shrink-0 w-full md:w-[66%] lg:w-[50%] aspect-[4/3] relative bg-zinc-900">
                  <img src="${u}" alt="" class="absolute inset-0 w-full h-full object-cover" loading="lazy" decoding="async">
                </div>
              `).join("")}
            </div>
          </div>

          <button aria-label="Previous" id="asa-prev"
            class="hidden md:flex items-center justify-center absolute left-2 top-1/2 -translate-y-1/2 w-10 h-10 rounded-full bg-black/60 border border-white/10 backdrop-blur hover:bg-black/80 focus:outline-none">
            &#10094;
          </button>
          <button aria-label="Next" id="asa-next"
            class="hidden md:flex items-center justify-center absolute right-2 top-1/2 -translate-y-1/2 w-10 h-10 rounded-full bg-black/60 border border-white/10 backdrop-blur hover:bg-black/80 focus:outline-none">
            &#10095;
          </button>

          <div class="mt-4 flex justify-center gap-2" id="asa-dots"></div>
        </div>
      `;

      const track = document.getElementById("asa-track");
      const prev  = document.getElementById("asa-prev");
      const next  = document.getElementById("asa-next");
      const dots  = document.getElementById("asa-dots");

      let index = 0;
      const count = urls.length;
      let auto = null;

      dots.innerHTML = urls.map((_, i) =>
        `<button class="w-2.5 h-2.5 rounded-full border border-white/20 ${i===0?'bg-white/80':'bg-white/10'}" data-i="${i}" aria-label="Go to slide ${i+1}"></button>`
      ).join("");

      function update() {
        const slideW = track.children[0].getBoundingClientRect().width;
        track.style.transform = `translateX(${-index * slideW}px)`;
        [...dots.children].forEach((d, i) => {
          d.classList.toggle("bg-white/80", i === index);
          d.classList.toggle("bg-white/10", i !== index);
        });
      }

      function nextSlide() { index = (index + 1) % count; update(); }
      function prevSlide() { index = (index - 1 + count) % count; update(); }

      next.addEventListener("click", nextSlide);
      prev.addEventListener("click", prevSlide);
      dots.addEventListener("click", (e) => {
        const b = e.target.closest("button[data-i]");
        if (!b) return;
        index = +b.dataset.i;
        update();
      });

      const shell = el.querySelector(".group");
      function startAuto() { if (!autoMs) return; stopAuto(); auto = setInterval(nextSlide, autoMs); }
      function stopAuto()  { if (auto) clearInterval(auto); auto = null; }

      shell.addEventListener("mouseenter", stopAuto);
      shell.addEventListener("mouseleave", startAuto);
      shell.addEventListener("touchstart", stopAuto, {passive:true});
      shell.addEventListener("touchend", startAuto, {passive:true});

      let x0 = null;
      shell.addEventListener("touchstart", (e)=>{ x0 = e.touches[0].clientX; }, {passive:true});
      shell.addEventListener("touchend", (e)=>{
        if (x0 == null) return;
        const dx = e.changedTouches[0].clientX - x0;
        if (Math.abs(dx) > 40) (dx < 0 ? nextSlide() : prevSlide());
        x0 = null;
      }, {passive:true});

      window.addEventListener("keydown", (e)=>{
        if (e.key === "ArrowRight") nextSlide();
        if (e.key === "ArrowLeft")  prevSlide();
      });

      window.addEventListener("resize", update);

      update();
      startAuto();
    }

    discover().then(buildSlider).catch(() => {
      el.innerHTML = `<p class="text-red-400">Error loading images.</p>`;
    });
  })();
  </script>

  <!-- Shop Slideshow Script -->
  <script>
  (function(){
    const slideshow = document.getElementById('shop-slideshow');
    if (!slideshow) return;

    const folder = 'images/artists/asa';
    const prefix = 'asa-';
    const imagesPerView = 4;
    let currentIndex = 0;
    let slides = [];

    for (let i = 1; i <= 10; i++) {
      const num = String(i).padStart(2, '0');
      slides.push(`${folder}/${prefix}${num}.jpg`);
    }

    const container = document.createElement('div');
    container.className = 'absolute inset-0 flex gap-2 transition-transform duration-500';
    slideshow.innerHTML = '';
    slideshow.appendChild(container);
    
    const images = slides.map(() => {
      const div = document.createElement('div');
      div.className = 'w-1/4 flex-shrink-0';
      const img = new Image();
      img.className = 'w-full h-full object-cover';
      img.loading = 'lazy';
      img.decoding = 'async';
      div.appendChild(img);
      container.appendChild(div);
      return img;
    });

    function updateSlides() {
      images.forEach((img, i) => {
        const slideIndex = (currentIndex + i) % slides.length;
        img.src = slides[slideIndex];
      });
      container.style.transform = 'translateX(0)';
    }

    function nextSlide() {
      currentIndex = (currentIndex + imagesPerView) % slides.length;
      updateSlides();
    }

    updateSlides();
    setInterval(nextSlide, 4000);
  })();
  </script>
