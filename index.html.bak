<script>
(function(){
  // For each <script type="application/json" id="*-works">, render into #*-gallery if present.
  function renderGallery(handle){
    try {
      var dataEl = document.getElementById(handle + '-works');
      var gridEl = document.getElementById(handle + '-gallery');
      if (!dataEl || !gridEl) return;
      var items = JSON.parse(dataEl.textContent || '[]');
      gridEl.innerHTML = items.map(function(it){
        var alt = it.alt || '';
        var src = it.src;
        return '<figure class="group rounded-xl overflow-hidden border border-white/10 bg-black/40">'
          + '<div class="aspect-square w-full overflow-hidden">'
          + '<img loading="lazy" decoding="async" src="'+src+'" alt="'+alt+'" class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform duration-300">'
          + '</div><figcaption class="p-2 text-xs text-zinc-400">'+alt+'</figcaption></figure>';
      }).join('');
    } catch (e) { console.error(e); }
  }

  ['devin','danny','dale'].forEach(renderGallery);
})();
</script>

